@model UI.Models.ViewModels.PersonaConListaDepartamentos

@{
    ViewData["Title"] = "Editar Persona";
}

<h2>Editar Persona</h2>

<form method="post" asp-action="ListadoPersonas">

    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellido" class="control-label"></label>
        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaNac" class="control-label"></label>
        @Html.TextBoxFor(model => model.FechaNac, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        <span asp-validation-for="FechaNac" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Direccion" class="control-label"></label>
        @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control" })
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono" class="control-label"></label>
        @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdDepartamento" class="control-label"></label>
        <select asp-for="IdDepartamento" class="form-control">
            <option value="">Seleccione un departamento</option>
            @foreach (var departamento in Model.ListadoDepartamentos)
            {
                <!--
                    if (Model.IdDepartamento == departamento.Id)
                {
                        <option value="departamento.Id" selected=> departamento.Nombre</option>
                }
                else
                {
                        <option value="departamento.Id">departamento.Nombre</option>
                }
                -->
                <!-- selected puede considerarse como selected o null asi que si haces esta comprobacion puede -->
                <option value="@departamento.Id" selected="@(Model.Id == departamento.Id ? "selected" : null)" > @departamento.Nombre </option>
            }
        </select>
        <span asp-validation-for="IdDepartamento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

<a asp-action="ListadoPersonas">Volver al Listado</a>